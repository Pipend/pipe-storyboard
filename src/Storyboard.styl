@require 'LabelledComponent'
@require 'Story'
@require '../node_modules/react-selectize/themes/index.css'

.react-selectize-dropdown
    font-family Helvetica Neue, Helvetica, Arial, sans-serif
    width auto
    min-width 200px

.tether-element
    z-index 20

.storyboard
    display flex
    align-items flex-start
    font-family helvetica
    height 100%

    .form
        background rgba(0,0,0,0.02)
        border-right 1px solid #ccc
        box-shadow 1px 0px 5px rgba(0,0,0,0.1)
        overflow auto
        padding 20px 20px 20px 0px
        position relative
        width 300px
        height calc(100% - 40px)
        z-index 10

        .react-selectize
            display inline-block
            width 200px

        > div 
            margin-bottom: 10px
        
        .buttons
            display flex
            justify-content flex-end
            margin-top 16px

            .button 
                background linear-gradient(top, #fff 5%, #f6f6f6 100%)
                border 1px solid #ccc
                border-radius 5px
                box-shadow inset 0 1px 0 0 #fff
                box-sizing border-box
                cursor pointer
                margin-left 8px
                padding 6px 8px
                text-align center
                text-shadow 0 1px 0 #fff
                width 90px

                &.highlight
                    border-top: 2px solid orange


    .children
        overflow auto
        position relative
        width calc(100% - 320px)
        height 100%