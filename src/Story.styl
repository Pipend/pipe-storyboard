.story

    .buttons
        display flex
        align-items center
        justify-content flex-end
        width 100%
        height 44px

        > a
            color #666
            cursor pointer
            font-size 14px
            padding 4px 8px
            text-decoration underline

    .presentation
        position relative
        width 100%
        height calc(100% - 44px)


