.story
    position relative

    &.loading:after
        background-color rgba(0,0,0,0.4)
        color white
        content "Loading ..."
        font-size 48
        display flex
        align-items center
        justify-content center
        position absolute
        left 0px
        top 0px
        width 100%
        height 100%
        z-index 1

    .header
        background-color #f6f6f6
        border-bottom 1px solid #eee
        display flex
        align-items center
        height 44px

        .title
            flex-grow 0
            overflow hidden
            text-indent 20
            text-overflow ellipsis
            white-space nowrap

        .buttons
            display flex
            justify-content flex-end
            flex-grow 1
            > a
                color #666
                cursor pointer
                font-size 14px
                padding 4px 6px
                text-decoration underline
                white-space nowrap

    .presentation
        position relative
        width 100%
        height calc(100% - 44px)


